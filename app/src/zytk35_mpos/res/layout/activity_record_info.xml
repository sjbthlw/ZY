<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/s_bg"
    tools:context=".Activity.QueryRecordActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_check_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>


        <TextView
            android:id="@+id/text_title"
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:text="@string/local_business_set" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_checked_num"
        style="@style/titleText"
        android:layout_marginTop="37dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="109dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/business_count_bg">
        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:background="@drawable/business_count_bg_linear">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="序号"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="42dp"
                style="@style/titleTextBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="85dp"
                style="@style/titleTextBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                style="@style/titleTextBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="140dp"
                style="@style/titleTextBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="140dp"
                style="@style/titleTextBlack"/>
        </LinearLayout>

        <ListView
            android:id="@+id/list_business_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_top"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:divider="@null"
            android:dividerHeight="0dp">

        </ListView>
    </RelativeLayout>


</RelativeLayout>