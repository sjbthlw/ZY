<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="576dp"
    android:layout_height="336dp"
    android:background="@mipmap/select_pop_bg">

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/msg"/>
        <TextView
            android:id="@+id/tv_selectInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRead"
            android:text="确认恢复出差设置"
            android:textSize="30sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_msg"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="147dp"
            android:layout_height="56dp"
            android:background="@mipmap/cancle_bg"/>
        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="147dp"
            android:layout_height="56dp"
            android:layout_marginLeft="60dp"
            android:background="@mipmap/confirm_bg"/>
    </LinearLayout>

</RelativeLayout>