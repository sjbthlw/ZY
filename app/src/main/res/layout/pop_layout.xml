<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="426dp"
    android:layout_height="266dp"
    android:background="@drawable/business_count_bg">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/business_count_bg_linear">

        <TextView
            style="@style/titleTextGary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="详情信息"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:src="@mipmap/s_exit" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/iv_pop"
            android:layout_width="240dp"
            android:layout_height="320dp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/iv_pop"
            android:layout_alignBottom="@id/iv_pop"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/iv_pop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextGary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓        名" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/titleTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="陈赠一" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextGary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金        额" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/titleTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="552.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextGary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易时间" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/titleTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="06-30 09:18:25" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/titleTextGary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="识  别  度" />

                <TextView
                    android:id="@+id/tv_recognition"
                    style="@style/titleTextBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="0.0" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>