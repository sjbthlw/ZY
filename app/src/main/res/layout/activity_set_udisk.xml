<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/s_bg"
tools:context=".Activity.SetUdiskActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="42dp"
    android:layout_marginTop="36dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_check_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/text_title"
        style="@style/titleText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:text="数据导出" />
</LinearLayout>

<ListView
    android:id="@+id/lv_set_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="300dp"
    android:layout_marginRight="300dp"
    android:divider="@null"
    android:dividerHeight="4dp"
    android:selectable="true"
    android:scrollbars="none"
    android:listSelector="#00000000"
    android:layout_centerInParent="true">

</ListView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="42dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="15dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/s_hint"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示："
        android:textSize="25sp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorOrange"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notice_title_1"
        android:textSize="25sp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorWhite"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/s_return"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notice_title_2"
        android:textSize="25sp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notice_title_3"
        android:textSize="25sp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notice_title_4"
        android:textSize="25sp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorWhite"/>
</LinearLayout>


</RelativeLayout>